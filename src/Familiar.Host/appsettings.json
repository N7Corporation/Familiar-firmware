{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
    }
  },
  "Familiar": {
    "Security": {
      "Pin": "1234",
      "Jwt": {
        "Key": "familiar-firmware-secret-key-min-32-chars",
        "Issuer": "familiar-firmware",
        "Audience": "familiar-clients",
        "ExpirationMinutes": 480
      },
      "RateLimiting": {
        "PermitLimit": 100,
        "WindowMinutes": 1
      }
    },
    "Audio": {
      "OutputDevice": "default",
      "InputDevice": "default",
      "SampleRate": 48000,
      "BufferSize": 1024,
      "Volume": 0.8,
      "MicMode": "vox",
      "VoxThreshold": 0.02,
      "VoxHoldMs": 500
    },
    "Tts": {
      "Engine": "espeak",
      "Voice": "en",
      "Rate": 150,
      "Pitch": 0,
      "Volume": 100
    },
    "Meshtastic": {
      "Enabled": true,
      "Port": "/dev/ttyUSB0",
      "BaudRate": 115200,
      "NodeName": "Familiar",
      "Channel": 0,
      "AllowedNodes": [],
      "ReconnectDelaySeconds": 5
    },
    "Camera": {
      "Enabled": false,
      "Width": 1920,
      "Height": 1080,
      "Framerate": 30,
      "RecordingPath": "/home/familiar/recordings",
      "StreamBitrate": 4000000,
      "RecordingBitrate": 8000000,
      "SnapshotQuality": 90
    }
  }
}
